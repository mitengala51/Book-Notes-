<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Notes</title>
    <link rel="stylesheet" href="/style/bookNotes.css">
</head>
<body>
    <div id="container">
        <h1 id="heading">Book Notes</h1>
        
        <% if (bookNotes.length === 0) { %>
            <p class="intro">No notes found.</p>
        <% } else { %>
            <% bookNotes.forEach(note => { %>
                <div id="container-3">
                    <img src="<%= note.image %>" alt="Book Cover" width="100" height="150">
                    <div>
                        <h2><%= note.title %></h2>
                        <p class="e_d"><%= note.date_t %></p>
                        <p id="b_intro"><%= note.books_intro %></p>
                        <p><%= note.notes %></p>
                        <p><%= note.reviews %></p>
                        <a href="/edit/<%= note.id %>" id="edit">Edit</a>
                        <a href="/delete/<%= note.id %>" id="delete">Delete</a>
                    </div>
                </div>
            <% }); %>
        <% } %>

        <a href="/new" id="New-Notes">Add New Notes</a>
    </div>
</body>
</html>
